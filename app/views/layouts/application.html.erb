<!DOCTYPE html>
<html>
  <head>
    <title>CareerDoor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?key=AIzaSyCo1SdavLRmW3eZJqlOGHl9LLjPTrqLIz4&sensor=true' %>
    <%# <script src="//maps.google.com/maps/api/js?key=AIzaSyCo1SdavLRmW3eZJqlOGHl9LLjPTrqLIz4"></script>   %>
    <%# <script src="//maps.google.com/maps/api/js?key=AIzaSyCo1SdavLRmW3eZJqlOGHl9LLjPTrqLIz4"></script>  
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>  
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <script src='//underscorejs.org/underscore-min.js' type='text/javascript'></script> %>
  </head>
  
  <body class=<%= "#{controller_name}-#{action_name}" %>>
    <center>
      <div style="background-color: green;">
        <span class="text-center" style="color: white; font-weight: bold; background-color: green;"><%= notice %></span>
      </div>
      <div style="background-color: red;">
        <span class="text-center" style="color: white; font-weight: bold"><%= alert %></span>
      </div>
    </center>

    <% if current_user&.has_role? :user %>
      <%= render 'layouts/user_header' %>
    <%elsif current_user&.has_role? :super_admin %>
      <%= render 'layouts/admin_header' %>
    <%elsif current_company&.has_role? :company %>
      <%= render 'layouts/company_header' %>
    <% end %>

    <%= yield %>
    <div id="person-form" style="display:none"></div>
  </body>

</html>
