<!DOCTYPE html>
<html>
  <head>
    <title>CareerDoor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <center>
      <div style="background-color: #00D363;">
        <span class="text-center"
          style="color: white; font-weight: bold; background-color: #00D363;"><%= notice %></span>
      </div>
      <div style="background-color: red;">
        <span class="text-center" style="color: white; font-weight: bold"><%= alert %></span>
      </div>
    </center>
    <%= yield %>
  </body>
</html>
