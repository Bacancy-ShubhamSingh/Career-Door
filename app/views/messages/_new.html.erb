<div class="col-lg-12">
  <div class="au-card au-card--no-shadow au-card--no-pad m-b-20 au-card--border">
    <div class="au-inbox-wrap">
      <div class="au-chat au-chat--border">
        <div class="au-chat__content au-chat__content2 js-scrollbar5" id="scroll_div">
          <div id = "chattings">
            <%= render 'message_list', messages: @messages %>
          </div>
        </div>
        <div class="au-chat-textfield">
        <%= form_with(model: @message, validate: true, class: "au-form-icon", remote: true) do |f| %>
          <%= f.text_field :msg, autofocus: true, placeholder: "Type a message..", class: "au-input au-input--full au-input--h65" %>
          <%= f.hidden_field :company_id, value: current_company.id %>
          <%= f.submit "Send", class: "au-input-icon btn-link" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var element = document.getElementById("scroll_div");
  element.scrollTop = element.scrollHeight - element.clientHeight;
</script>
