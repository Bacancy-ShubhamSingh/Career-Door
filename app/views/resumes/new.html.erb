<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <%= form_with model: @new_resume, url: resumes_path, validate: true,local: true do |f| %>

        <div class="form-group">
          <%= f.label :Resume_Name %>
          <%= f.text_field :resume_name, class: "au-input au-input--full"  %>
        </div>

        <div class="form-group">
          <%= f.label :Resume %>
          <%= f.file_field :file, accept: 'application/pdf' %>
          *only pdf files can be upload
        </div>

        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
        </div>
        
        <% end %>
      </div>
    </div>
  </div>
</div>
