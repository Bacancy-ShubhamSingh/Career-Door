<div id="my_form">
  <a href="#" id="close_form" class="fa fa-times fa-3" ></a>
  <%= form_with model: @new_resume, url: resumes_path, validate: true do |f| %>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :Resume_Name %>
        <%= f.text_field :resume_name, class: "au-input au-input--full"  %>
      </div>

      <div class="form-group col-md-6">
        <br/>
        <%= f.file_field :file, accept: 'application/pdf', class: "au-input au-input--full" %>
        *only pdf files can be upload
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
 