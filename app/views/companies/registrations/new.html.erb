<body class="animsition">
  <div class="page-wrapper">
    <div class="page-content--bge8">
      <div class="container">
        <div class="login-wrap">
          <div class="login-content">
            <div class="login-logo">
              <a href="#">
                <h2>Sign Up</h2>
              </a>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.label :company_logo %><br />
                <%= f.file_field :avatar %>
              </div>

              <div class="form-group">
                <%= f.label :company_name %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :description %><br />
                <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :website %><br />
                <%= f.text_field :website, autofocus: true, autocomplete: "website", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :mobile %><br />
                <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <!-- Country -->
                <%= f.label :country %>
                <%= f.select :country, options_for_select(CS.countries.map { |c| [c[1], c[0]] } ) %>
              </div>

              <div class="form-group">
                <!-- State -->
                <%= f.label :state %>
                <%= f.select :state, options_for_select([]) %>
              </div>

              <div class="form-group">
                <!-- City -->
                <%= f.label :city %>
                <%= f.select :city, options_for_select([]) %>
              </div>

              <div class="form-group">
                <%= f.label :address %><br />
                <%= f.text_area :address, autofocus: true, autocomplete: "address", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :whichtype %><br />
                <%= f.text_field :whichtype, autofocus: true, autocomplete: "whichtype", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up", class: "au-btn au-btn--block au-btn--green m-b-20" %>
              </div>
            <% end %>
            <%= render "companies/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
