<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :name, autofocus: true, placeholder: 'career door', sautocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true, placeholder: 'your company profile', autocomplete: "description" %>
  </div>

  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website, autofocus: true, placeholder: 'https://careerdoor.in', autocomplete: "website" %>
  </div>

  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile, placeholder: '+91-123 456 7890', autofocus: true, autocomplete: "mobile" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, autofocus: true, placeholder: 'your company address', autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :whichtype %><br />
    <%= f.text_field :whichtype, autofocus: true, placeholder: 'field in which your company is working', autocomplete: "whichtype" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: 'careerdoor@gmail.com', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "companies/shared/links" %>
