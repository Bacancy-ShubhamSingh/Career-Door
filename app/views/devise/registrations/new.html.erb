<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname, placeholder: 'career', autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname, placeholder: 'door', autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, placeholder: 'career1', autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'creerdoor@gmail.com', autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :contact%><br />
    <%= f.text_field :contact, placeholder: '+91-123 456 7890', autofocus: true %>
  </div>

  <div class="field" id="experience">
    <%= f.radio_button :experience, 'fresher', checked: true %>
    <%= f.label :experience_fresher, 'fresher',autofocus: true %>
    <%= f.radio_button :experience, 'experienced' %>
    <%= f.label :experience_experienced, 'experienced',autofocus: true %><br />
  </div>

  <div class="field" id="user_experience" style="display:none">
    <%= f.label :jobexperience%><br />
    <%= f.text_field :years_of_experience, placeholder: 'Number of years', autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
