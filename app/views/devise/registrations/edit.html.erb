<body class="animsition">
  <div class="page-wrapper">
    <div class="page-content--bge8">
      <div class="container">
        <div class="login-wrap">
          <div class="login-content">
            <div class="login-logo">
              <a href="#">
                <h2>Edit <%= resource_name.to_s.humanize %></h2>
              </a>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.label :username %><br />
                <%= f.text_field :username, autofocus: true, class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :firstname %><br />
                <%= f.text_field :firstname, autofocus: true, class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :lastname %><br />
                <%= f.text_field :lastname, autofocus: true, class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :contact %><br />
                <%= f.text_field :contact, autofocus: true, class: "au-input au-input--full" %>
              </div>

              <% if resource.has_role?(:user) %>
                <div class="form-group" id="experience">
                  <%= f.radio_button :experience, 'fresher', checked: true %>
                  <%= f.label :experience_fresher, 'fresher',autofocus: true %>
                  <%= f.radio_button :experience, 'experienced' %>
                  <%= f.label :experience_experienced, 'experienced',autofocus: true %><br />
                </div>
              <% end %>

              <div class="form-group" id="user_experience" style="display:none">
                <%= f.label :jobexperience %><br />
                <%= f.text_field :years_of_experience, autofocus: true, class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "au-input au-input--full" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="form-group">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "au-input au-input--full" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "au-input au-input--full" %>
              </div>

              <div class="form-group">
                <%= f.submit "Update", class: "au-btn au-btn--block au-btn--green m-b-20" %>
              </div>
            <% end %>

            <h3>Cancel my account</h3>

            <p>Unhappy?
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
