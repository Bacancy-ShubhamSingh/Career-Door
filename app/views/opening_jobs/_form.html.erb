<div class="popular_catagory_area" style="padding-top: 5px;">
  <div class="container">
    <div class="row h-100 justify-content-center align-items-top">
      <div class="col-10 col-md-8 col-lg-6">
        <%= form_with(model: [@company, @job], validate: true, local: true) do |f| %>
          <% if @job.errors.any? %>
            <h2><%= pluralize(@job.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @job.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <div class="form-group">
            <%= f.label :job_role %><span class="myspan">*</span><br />
            <%= f.text_field :job_role, autofocus: true, autocomplete: "job_role", class: "au-input au-input--full" %>
          </div>

          <div class="form-group"><span class="myspan">&nbsp;</span>
            <%= f.label :description %><br />
            <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "au-input au-input--full" %>
          </div>

          <div class="form-group"><span class="myspan">*</span>
            <%= f.label :minimum_experience %><br />
            <%= f.number_field :experience, autofocus: true, min: 0, value: 1, class: "au-input au-input--full" %>
          </div>

          <div class="form-group"><span class="myspan">*</span>
            <%= f.label :minimum_cgpa %><br />
            <%= f.text_field :cgpa, autofocus: true, min: 0, value: 8.00, class: "au-input au-input--full" %>
          </div>

          <div class="form-group"><span class="myspan">*</span>
            <%= f.label :technology %><br />
            <% @technologies.each do |technology|%>
            <%= f.check_box :technologies, {multiple: true}, technology.technology_name, false %>
            <%= f.label technology.technology_name%>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.hidden_field :company_id, value: @company.id %>
          </div>

          <br />
          <div class="field">
            <%= f.submit "create job",class: "btn btn-primary btn-lg" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
